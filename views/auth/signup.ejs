<% layout('layouts/boilerplate') -%>

<div class="row">
    <div class="col-md-6 mx-auto">
        <%- include('../partials/flash')  %> 
        <div class="card p-4" style="background-color: #2c3e50; color: #ecf0f1;">
            <h1 class="display-6">Sign Up</h1>
            <form action="/register" method="post">
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" name="username" id="username" placeholder="Username" style="background-color: #34495e; color: #ecf0f1; border: 1px solid #ecf0f1;">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" name="email" id="email" placeholder="Email" style="background-color: #34495e; color: #ecf0f1; border: 1px solid #ecf0f1;">
                </div>
                <div class="mb-3">
                    <p class="mb-2">Want to register as?</p>
                    <div class="mx-2">
                        <label class="form-label" for="seller">Seller</label>
                        <input class="form-check-input mt-0" type="radio" name="role" value="seller" id="seller" aria-label="Radio button for following text input">
                    </div>
                    <div class="mx-2">
                        <label class="form-label" for="buyer">Buyer</label>
                        <input class="form-check-input mt-0" type="radio" name="role" value="buyer" id="buyer" aria-label="Radio button for following text input">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" placeholder="Password" style="background-color: #34495e; color: #ecf0f1; border: 1px solid #ecf0f1;">
                </div>
                <button type="submit" class="btn" style="background-color: #27ae60; color: #ffffff; height: 50px;">Sign Up</button> <!-- Green Button -->
            </form>
        </div>
    </div>
</div>
